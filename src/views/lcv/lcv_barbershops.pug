mixin usluga()
  .form__section.row
    .form__group.col-xl-12
      .row
        .form__item.col-xl-4.col-sm-8.col-12
          span.item-label Наименование услуги:
          input(type="text").input.input_style4
        .form__item.col-xl-2.col-sm-4.col-6
          span.item-label Стоимость услуги:
          input(type="text").input.input_style4
        .form__item.col-xl-2.col-sm-4.col-6
          span.item-label ТОП Барбер:
          .form__input
            svg.icon
              use(xlink:href="img/icons/barbers-sprite.svg#topbarber")
            input(type="text").input.input_style4
        .form__item.col-xl-2.col-sm-4.col-6
          span.item-label Барбер:
          .form__input
            svg.icon
              use(xlink:href="img/icons/barbers-sprite.svg#barber")
            input(type="text").input.input_style4
        .form__item.col-xl-2.col-sm-4.col-6
          span.item-label Стажер:
          .form__input
            svg.icon
              use(xlink:href="img/icons/barbers-sprite.svg#beginner")
            input(type="text").input.input_style4
    .form__group.col-xl-12
      .row
        .form__item.col-xl-9.col-sm-12.toggle-group
          .row
            .col-xl-auto
              a(href="#").button.button_style8.toggle-button Описание услуги:
                i.fas.fa-angle-double-right
            .col-xl.col-12.toggle-content
              textarea.input.input_style4.input_size2
        .form__item.col-xl-3.col-sm-4.col-12
          button.button.button_style9.small Удалить услугу



