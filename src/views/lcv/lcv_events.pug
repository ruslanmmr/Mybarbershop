doctype html
html(lang="ru")
  head
    include ../blocks/head
  body
    .background.lazy(data-src='img/backgrounds/background.jpg')
    .wrapper
      .page
        include ../blocks/header
        .page__container.container
          aside.aside
            include ../blocks/lcv-nav
          main.main
            section.section
              .section__head
                .decorated
                  span.decoration
                  h5.section__head-title Добавить событие
                  span.decoration
              .container
                form(action="").form
                  .form__section.row
                    .form__group.col-xl-3.col-6
                      .form__item
                        span.item-label Фото:
                        .image-load-area
                          a(href="#").button.button_type-img-load Загрузить<br> изображение
                          a(href="#").button.button_type-close
                            i.fas.fa-times
                    .form__group.col-xl-9.col-12
                      .row
                        .form__item.col-xl-6.col-12
                          span.item-label Название:
                          input(type="text").input.input_style4
                        .form__item.col-xl-6.col-12
                          span.item-label Адрес:
                          input(type="text").input.input_style4
                        .form__item.col-xl-6.col-12
                          span.item-label Дата и время проведения:
                          input(type="text").input.input_style4
                        .form__item.col-xl-6.col-12
                          span.item-label Email:
                          input(type="email").input.input_style4
                    .form__group.col-xl-12
                      .row
                        .form__item.col-xl-3.col-sm-4.col-12
                          span.item-label Тип события:
                          .select
                            select
                              option(value="") 2222
                              option(value="") 192290
                              option(value="") 199331
                        .form__item.col-xl-9.col-sm-8.col-12
                          span.item-label Место проведения: переместите маркер на карте в нужное место:
                          include ../blocks/map
                  .form__section
                    //организатор
                    .form__item.mb-30
                      span.item-label Ведущий:
                      .row
                        .col-xl-3.col-6
                          .image-load-area
                            a(href="#").button.button_type-img-load.big Загрузить<br> фото
                            a(href="#").button.button_type-close
                              i.fas.fa-times
                        .col-xl-9.col-12
                          .row
                            .form__item.col-xl-12
                              input(type="text" placeholder="ФИО").input.input_style4
                            .form__item.col-xl-12
                              textarea(placeholder="Описание").input.input_style4.input_size2
                        .col-xl-3.col-12
                          button.button.button_style9.small Удалить
                    .row
                      .col-xl-4.col-sm-6.col-12
                        button.button.button_style7
                          i.fas.fa-plus
                          | Добавить
