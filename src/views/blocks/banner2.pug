mixin slide()
  .slide.banner-slide
    a(href="#").banner-slide__background.cover-box
      img(alt="").lazy.banner-slide__image&attributes(attributes)
      
.banner.banner_type2
  .banner__container
    .container
      .slider.slider_dots.banner__slider
        +slide()(data-src="img/banner/banner-image2.jpg")
        +slide()(data-src="img/banner/banner-image3.png")
        +slide()(data-src="img/banner/banner-image4.jpg")