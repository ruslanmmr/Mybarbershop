header.header
  .container
    .header__container
      span.overlay
      .logo 
        a(href="index.html").logo__link
          .logo__image
            img(src="img/logos/logo.svg", alt="logo")
      nav.nav
        .nav__head
          form.nav__search
            .search
              input(type="text" placeholder="Поиск" required).input.input_style1.search__input
              button.search__button
                i.fas.fa-search
          button.nav__close.mobile-button
            i.fas.fa-times
        ul.nav__list
          li.nav__item  
            a(href="#").nav__link барбершопы
          li.nav__item  
            a(href="#").nav__link новости
          li.nav__item  
            a(href="#").nav__link free
          li.nav__item  
            a(href="#").nav__link Ищу работу
          li.nav__item  
            a(href="#").nav__link ищу сотрудника
          li.nav__item  
            a(href="#").nav__link барахолка
      .sub-nav
        ul.sub-nav__list
          li.sub-nav__item
            a(href="#windowCity").sub-nav__link.mobile-button.windowOpenButton
              i.fas.fa-map-marker-alt
              span Москва
          li.sub-nav__item
            a(href="#windowProfile").sub-nav__link.mobile-button.windowOpenButton
              i.fas.fa-user
              span Иванов И.И.
          li.sub-nav__item.sub-nav__item_hamburger
            a(href="#").sub-nav__link.sub-nav__nav-open.mobile-button
              i.fas.fa-bars