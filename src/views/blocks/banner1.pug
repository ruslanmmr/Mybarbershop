  .container
    .banner__container
      .slider.slider_dots.slider_arrows.banner__slider
        +slide('ЗарЕГИСТРИРУйся', 'и получи больше возможностей...')
        +slide('Заголовок', 'какой-либо текст...')
        +slide('Заголовок', 'какой-либо текст...')
        +slide('Заголовок', 'какой-либо текст...')