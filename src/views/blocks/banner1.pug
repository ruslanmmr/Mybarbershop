mixin slide(title, subtitle)
  .slide.banner-slide.banner-slide_mask.banner-slide_style3
    .banner-slide__background.cover-box
      img(src="img/banner/banner-image1.jpg", alt="").banner-slide__image
    .banner-slide__container
      h2.banner-slide__title=title
      h3.banner-slide__sub-title=subtitle
